extends layout

block content
  .modal(id="display")
  .w3-card-4 
    header.w3-container.w3-indigo
      h2 File List #[a.w3-btn.w3-round.w3-blue(href="/files/upload") +]
    .w3-container
      table.w3-table.w3-bordered
        tr
          th Date
          th File
          th Size
          th Type
          th Description
        each f in files 
          tr(onclick="showFile('" + f.name + "','" + f.mimetype + "')")
            td=f.date
            td=f.name
            td=f.size
            td=f.mimetype
            td=f.desc
    .footer.w3-container.w3-indigo 
      address Generated by upload-single::RPCW2023 in #{d}